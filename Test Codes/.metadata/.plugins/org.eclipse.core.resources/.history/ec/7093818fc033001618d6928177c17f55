#include "movingArray.h"

float movingArray[movingArrayNumber][movingArrayFrequency];
float sum[movingArrayNumber] = 0;
long int index[movingArrayNumber] = 0;

float movingArrayOut(int i,float in) {
	if(index[i] < movingArrayFrequency) {
		movingArray[i][index[i]] = in;
		index[i]++;

		sum += in;
		return sum/index;
	}
	sum = sum - movingArray[i][index%10];
	movingArray[i][index%10] = in;
	index++;

	sum += in;
	return sum/movingArrayFrequency;
}

